{
  "name": "aidash-desktop",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "Local-first, event-driven AI task manager (Electron + React)",
  "main": "electron/main.js",
  "scripts": {
    "clean": "rimraf dist renderer/dist",
    "renderer": "vite --config renderer/vite.config.js",
    "electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm:renderer\" \"npm:electron\"",
    "build:renderer": "vite build --config renderer/vite.config.js",
    "build": "npm run build:renderer && cross-env NODE_ENV=production electron-builder -c",
    "start": "electron ."
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-store": "^9.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "yaml": "^2.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "rimraf": "^5.0.5"
  }
}
